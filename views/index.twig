<!DOCTYPE html>
<html>
{% include 'head.html.twig' with { i18n : i18n } %}
<body>
    <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="jumbotron text-center">
                        <i class="fas fa-bug icon-app"></i>
                        <h1 class="display-5">{{i18n.appName}}</h1>
                        <div id="pan-1">
                            <div class="row">
                                <div class="col-md-8 offset-md-2">
                                    <p class="lead">{{i18n.index.lead}}</p>
                                </div>
                            </div>
                            <div class="row text-center">
                                <div class="col-md-8 offset-md-2">
                                    <button id="btn-start" class="btn btn-primary btn-lg">{{i18n.index.startBtnText}}</button>
                                </div>
                            </div>
                        </div>
                        <div id="pan-2" style="display: none">
                            <div class="row text-center">
                                <div class="col-md-8 offset-md-2">
                                    <p class="lead">{{i18n.index.instructions}}</p>
                                    <div class="card">
                                        <div class="card-header">
                                            <strong>{{i18n.index.cardTitle}}</strong>
                                        </div>
                                        <ul class="list-group list-group-flush clickable">
                                            {% for app in availableApps %}
                                                <li id="{{app.appid}}" class="list-group-item">{{app.name}}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="text-muted text-center">&copy; {{i18n.copyright}}<br></p>
                    <br>
                </div>
            </div>
        </div>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"   integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="   crossorigin="anonymous"></script>       
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="/js/home.js"></script>
</body>
</html>
